<div class="mb-1">
    <input type="text" placeholder="Adres Adı" class="form-control" value="@Model.Name" id="AddressName"/>
</div>

<label>Adres: </label>
<div class="mb-1">
    <input type="text" placeholder="Adres" class="form-control" value="@Model.Description" id="AddressDescription"/>
</div>
<label>Şehir: </label>
