    <input type="text" placeholder="Ülke" class="form-control" value="@Model.Country" id="AddressCountry"/>
</div>
<label>Daire No: </label>
<div class="mb-1">
    <input type="text" placeholder="Daire No" class="form-control" value="@Model.ApartmentNo" id="AddressApartNo"/>
