@section Adjs
{
    <script>
        function GetProduct(ID) {
            getValue("Home/GetProduct",
                { CategoryID: ID },
                function (data, err) {
                    console.log(data);
                    if (!data) {
                        return;
                    } else {
                        $('#ecommerce-products').html(data);
                    }
                })

        };



        $("#shop-search").change(function () {
            var text = $('#shop-search').val();
            var CatID = $('#CatID').val();
            getValue("Home/SearchProduct",
                { SearchText: text, CatID: CatID },
                function (data, err) {
                    console.log(data);
                    if (!data) {
                        return;
                    } else {
                        $('#ecommerce-products').html(data);
                    }
                })
        });
    </script>
}
